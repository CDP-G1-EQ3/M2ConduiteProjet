<!-- Button trigger modal -->
<button type="button" class="btn btn-primary mb-2" data-toggle="modal" data-target="#exampleModal">
    Créer une tâche
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Création d'une tâche</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/task" method="post">
            <div class="form-group">
                <input type="text" name="projectId" value="<%= response.projectId %>" id="projectId" hidden>
            </div>
            <div class="form-group">
                <label for="description">Description</label><br>
                <textarea name="description" id="description" cols="40" rows="5" required></textarea>
            </div>
            <div class="form-group">
                <label for="duration">Durée en heures</label><br>
                <input type="number" name="duration" id="duration" min="1" max="8">
            </div>
            <div class="form-group">
                <label for="duration">Dépendance</label> <br>
                <select name="dependancy" id="dependancy" multiple>
                  <% response.tasks.forEach(task => { %>
                    <option value="<%= task.id %>"><%= task.id %> &ensp; <%= task.title.substring(0, 40) %></option>
                  <% }); %>
                </select>
            </div>
            <div class="form-group">
                <label for="userStroy">User Story associée</label><br>
                <input type="text" list="userStories" name="userStory" id="userStroy" required autocomplete="off">
                <datalist id="userStories">
                    <% response.userStories.forEach(us => { %>
                        <option value="<%= us.id %>"><%= us.id %> &ensp; <%= us.label.substring(0, 40) %></option>
                    <% }); %>
                </datalist>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                <button type="submit" class="btn btn-primary">créer</button>
            </div>
        </form>
      </div>
    </div>
  </div>
</div>